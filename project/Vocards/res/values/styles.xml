<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- MAIN ACTIVITY ICONS -->

    <style name="main_icon_container">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="icon_main">
        <item name="android:layout_width">68dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="icon_main_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">1dip</item>
        <item name="android:paddingBottom">1dip</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/main_icon_text</item>
        <item name="android:background">@drawable/main_gray_background</item>
    </style>

    <!-- MAIN ACTIVITY INFO TABLE -->

    <style name="main_table_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/main_icon_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="main_table_value">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_icon_text</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- FORMS -->
    <style name="form_label">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_icon_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="list_item_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_icon_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="list_item_flag_image">
        <item name="android:layout_width">34dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!-- LEARN -->
    
    <style name="card_factor_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
    
    <style name="card_factor_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>
    
    <style name="card_position_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>
    
    <style name="card_position_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>
    
    <style name="card_container">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/word_card</item>
        <item name="android:minWidth">180dp</item>
        <item name="android:layout_margin">20dp</item>
    </style>
    
    <style name="card_container_native">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="card_container_foreign">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    

</resources>
